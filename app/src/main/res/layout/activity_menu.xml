<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="15dp"
    tools:context="com.quizmagic.shopping.menu"
    android:background="#75018e">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您要訂購些什麼？"
            android:textSize="24dp"
            android:textColor="#ffffff" />

        <CheckBox
            android:onClick="clickToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奶茶"
            android:id="@+id/toppings_checkbox"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="150dp"
                android:onClick="increment"
                android:layout_height="60dp"
                android:text="+"

                android:background="#4287f7"
                android:textColor="#ffffff"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/quavtity_text_view"
                android:textSize="24dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="150dp"
                android:onClick="decrement"
                android:layout_height="60dp"
                android:text="-"

                android:background="#4287f7"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漢堡"

            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:onClick="submitOrder"
            android:layout_height="60dp"
            android:text="總共"
            android:id="@+id/button3"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:background="#46b8f6"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NT$0"
            android:id="@+id/price_text_view"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>
